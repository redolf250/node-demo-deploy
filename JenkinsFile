pipeline {
    agent {
       node{
         label "ubuntu"
       }
    }
    stages {
        stage("Clone Repository") {
            steps {
                script {

                    checkout scmGit(
                        branches: [[name: '*/main']],
                        extensions: [], 
                        userRemoteConfigs: [[url: 'https://github.com/redolf250/node-demo-deploy.git']]
                    )
                }
            }
        }

        stage("Install Node Packages and Start") {
            steps {
                script {
                    sh '''
                        cd node-demo-deploy
                        npm install
                        npm start
                    '''
                }
                echo "Hello, this should be your success story"
            }
        }
    }
}
