pipeline {
    agent { label "ubuntu" }
    stages {
        stage("Clone Repository") {
            steps {
                script {
                    checkout([
                        $class: 'GitSCM',
                        branches: [[name: '*/main']],
                        extensions: [],
                        userRemoteConfigs: [[url: 'https://github.com/redolf250/node-demo-deploy.git']]
                    ])
                    
                    // Check the current directory after cloning
                    sh 'pwd'
                    sh 'ls -l'
                }
            }
        }

        stage("Install Node Packages and Start") {
            steps {
                script {
                    // Navigate to the correct directory and run commands
                    sh '''
                        npm install
                        npm start
                    '''
                }
            }
        }

        stage("Confirmation Message") {
            steps {
                echo "Hello, this should be your success story!"
            }
        }
    }
}
