pipeline {
    agent {
        label "ubuntu"
    }
    stages {
        stage("Clone Repository") {
            steps {
                script {
                    checkout([
                        $class: 'GitSCM',
                        branches: [[name: '*/main']],
                        extensions: [],
                        userRemoteConfigs: [[url: 'https://github.com/redolf250/node-demo-deploy.git']]
                    ])
                }
            }
        }

        stage("Install Node Packages && Start") {
            steps{
               script {
                    sh 'cd /home/redolf250/jenkins/workspace/demo'
                    sh 'npm install'
                    sh 'npm start'
               }
            }

            steps{
               script {
                    echo "Hello this should be your success story"
               }
            }
        }
    }
}
